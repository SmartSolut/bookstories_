@model Bookstore.Models.Book

@{
    ViewData["Title"] = "حذف الكتاب";
}

<div class="page-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="mb-0"><i class="fas fa-book-dead me-3"></i>حذف الكتاب</h1>
                <p class="mb-0 opacity-75">تأكيد حذف الكتاب من المكتبة</p>
            </div>
            <div class="col-md-4 text-md-end">
                <a asp-action="Index" class="btn btn-light btn-lg">
                    <i class="fas fa-arrow-right me-2"></i>العودة للقائمة
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i>تأكيد الحذف</h5>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="fas fa-book-dead fa-4x text-danger mb-3"></i>
                        <h4 class="text-danger">هل أنت متأكد من حذف هذا الكتاب؟</h4>
                        <p class="text-muted">لا يمكن التراجع عن هذا الإجراء</p>
                    </div>

                    <div class="alert alert-warning" role="alert">
                        <h6 class="alert-heading"><i class="fas fa-info-circle me-2"></i>معلومات الكتاب</h6>
                        <div class="d-flex align-items-center justify-content-center">
                            <div class="avatar-sm bg-success text-white rounded-circle d-flex align-items-center justify-content-center me-3">
                                <i class="fas fa-book"></i>
                            </div>
                            <div class="text-start">
                                <strong>@Model.Title</strong>
                                <br>
                                <small class="text-muted">كتاب</small>
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-info" role="alert">
                        <h6 class="alert-heading"><i class="fas fa-user me-2"></i>معلومات المؤلف</h6>
                        <div class="d-flex align-items-center justify-content-center">
                            <div class="avatar-sm bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3">
                                <i class="fas fa-user"></i>
                            </div>
                            <div class="text-start">
                                <strong>@Model.Author.FullName</strong>
                                <br>
                                <small class="text-muted">مؤلف</small>
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="alert alert-secondary" role="alert">
                            <h6 class="alert-heading"><i class="fas fa-align-left me-2"></i>وصف الكتاب</h6>
                            <p class="mb-0">@Model.Description</p>
                        </div>
                    }

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                            <a asp-action="Index" class="btn btn-secondary btn-lg me-md-2">
                                <i class="fas fa-times me-2"></i>إلغاء
                            </a>
                            <button type="submit" class="btn btn-danger btn-lg">
                                <i class="fas fa-trash me-2"></i>تأكيد الحذف
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .avatar-sm {
        width: 40px;
        height: 40px;
    }
</style> 